    <script>
        // JavaScript pour le Portail Narratif Onirique
        const narrativeDisplay = document.getElementById('narrative-display');
        const choice1Button = document.getElementById('choice1-button');
        const choice2Button = document.getElementById('choice2-button');

        let currentNarrativeState = 0; // 0: initial, 1: choice 1, 2: choice 2

        const narrativeText = [
            `Au seuil d'un r√™ve √©veill√©, le voyageur se tenait devant une porte de lumi√®re pure, √©manant d'un "Point Z√©ro" lointain. Deux chemins s'offraient √† lui, refl√©tant les "Champs de Coh√©rence" et l'√©nigme du temps.`,
            `Le chemin du Temps se d√©voilait, ses spirales de "Lin√©arit√© S√©quentielle" tra√ßant des √©chos de m√©moires et de devenirs. Chaque pas r√©v√©lait une nouvelle chronologie, une perspective diff√©rente sur la causalit√©.`,
            `L'√âther Fluidique ondulait, invitant le voyageur √† s'y dissoudre. Des "Sauts Dimensionnels" sans effort permettaient de traverser des r√©alit√©s, de percevoir l'"Unimultiplicit√©" au-del√† des formes.`,
            `Le voyageur, √©treint par les paradoxes du temps, commen√ßa √† percevoir les "Cascades d‚Äô√âmergence" qui sculptaient chaque instant. Le pass√©, le pr√©sent et le futur dansaient en une seule symphonie.`,
            `En fusion avec l'√âther, la conscience du voyageur devint une "Matrice R√©flective". Il vit comment chaque "INTempt" se transformait en structure, et comment l'invisible tissait la mati√®re.`
        ];

        choice1Button.addEventListener('click', function() {
            if (currentNarrativeState === 0) {
                narrativeDisplay.innerHTML = `<p>${narrativeText[1]}</p>`;
                currentNarrativeState = 1;
                choice1Button.textContent = 'Approfondir la Chronologie üìö';
                choice2Button.style.display = 'none'; // Cacher l'autre choix
            } else if (currentNarrativeState === 1) {
                narrativeDisplay.innerHTML = `<p>${narrativeText[3]}</p>`;
                choice1Button.style.display = 'none';
                // Add an option to reset or go back to main menu
                const resetButton = document.createElement('button');
                resetButton.className = 'narrative-choice-button';
                resetButton.textContent = 'R√©initialiser le Portail ‚ú®';
                resetButton.addEventListener('click', () => {
                    currentNarrativeState = 0;
                    narrativeDisplay.innerHTML = `<p>${narrativeText[0]}</p>`;
                    choice1Button.textContent = 'Suivre les Lignes du Temps ‚è≥';
                    choice1Button.style.display = 'inline-block';
                    choice2Button.style.display = 'inline-block';
                    resetButton.remove();
                });
                narrativeDisplay.parentElement.appendChild(resetButton);
            }
        });

        choice2Button.addEventListener('click', function() {
            if (currentNarrativeState === 0) {
                narrativeDisplay.innerHTML = `<p>${narrativeText[2]}</p>`;
                currentNarrativeState = 2;
                choice2Button.textContent = 'Explorer les R√©sonances üåÄ';
                choice1Button.style.display = 'none'; // Cacher l'autre choix
            } else if (currentNarrativeState === 2) {
                narrativeDisplay.innerHTML = `<p>${narrativeText[4]}</p>`;
                choice2Button.style.display = 'none';
                // Add an option to reset or go back to main menu
                const resetButton = document.createElement('button');
                resetButton.className = 'narrative-choice-button';
                resetButton.textContent = 'R√©initialiser le Portail ‚ú®';
                resetButton.addEventListener('click', () => {
                    currentNarrativeState = 0;
                    narrativeDisplay.innerHTML = `<p>${narrativeText[0]}</p>`;
                    choice1Button.textContent = 'Suivre les Lignes du Temps ‚è≥';
                    choice1Button.style.display = 'inline-block';
                    choice2Button.style.display = 'inline-block';
                    resetButton.remove();
                });
                narrativeDisplay.parentElement.appendChild(resetButton);
            }
        });


        // JavaScript pour le Portail des √âchos Oniriques
        const echoPortalForm = document.getElementById('echo-portal-form');
        const dreamFragmentInput = document.getElementById('dream-fragment');
        const generatedEchoDisplay = document.getElementById('generated-echo-display');
        const echoTextElement = document.getElementById('echo-text');
        const revelationModal = document.getElementById('revelation-modal');
        const modalEchoTextElement = document.getElementById('modal-echo-text');
        const closeRevelationButton = document.getElementById('close-revelation-button');

        const thematicPrefixes = [
            "Une r√©sonance de",
            "L'√©cho d'une",
            "Une intention issue de",
            "Un fragment de",
            "La torsion d'une",
            "Le murmure d'une"
        ];
        const thematicSuffixes = [
            " se tisse dans l'√âther Fluidique.",
            " d√©forme les Lignes du Temps.",
            " r√©v√®le une nouvelle G√©om√©trie Qualitative.",
            " √©merge du Point Z√©ro.",
            " active les Champs de Coh√©rence.",
            " impulse une N√©guentropie latente."
        ];

        echoPortalForm.addEventListener('submit', function(event) {
            event.preventDefault();
            const fragment = dreamFragmentInput.value.trim();
            if (fragment) {
                const prefix = thematicPrefixes[Math.floor(Math.random() * thematicPrefixes.length)];
                const suffix = thematicSuffixes[Math.floor(Math.random() * thematicSuffixes.length)];
                const generatedEcho = `${prefix} "${fragment}" ${suffix}`;

                echoTextElement.textContent = generatedEcho;
                modalEchoTextElement.textContent = generatedEcho; // Mettre √† jour le texte de la modale

                generatedEchoDisplay.classList.remove('hidden');
                revelationModal.classList.remove('hidden'); // Afficher la modale
            } else {
                alert("Veuillez saisir un fragment de r√™ve ou une intention !"); // Utilisation temporaire, √† remplacer par une modale personnalis√©e si besoin
            }
        });

        closeRevelationButton.addEventListener('click', function() {
            revelationModal.classList.add('hidden'); // Cacher la modale
            echoPortalForm.reset(); // R√©initialiser le formulaire
            generatedEchoDisplay.classList.add('hidden'); // Cacher l'affichage de l'√©cho g√©n√©r√©
        });
    </script>
